{
  "name": "company-library",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "biome check src/ test/",
    "lint:fix": "biome check src/ test/ --write",
    "lint:ci": "biome ci src/ test/ --reporter=github",
    "test": "vitest",
    "typeCheck": "tsc --pretty --noEmit",
    "db:generate": "npx prisma generate",
    "db:push": "dotenv -e .env.development.local -- npx prisma db push",
    "db:console": "dotenv -e .env.development.local -- npx prisma studio",
    "db:seed": "dotenv -e .env.development.local -- npx prisma db seed"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@slack/webhook": "^7.0.3",
    "@vercel/blob": "^0.23.4",
    "graphql": "^16.9.0",
    "luxon": "^3.5.0",
    "next": "14.2.7",
    "next-auth": "^4.24.7",
    "prisma": "^5.17.0",
    "react": "canary",
    "react-dom": "canary",
    "swr": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@testing-library/dom": "^10.3.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.16.1",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.9.1",
    "eslint-config-next": "14.2.7",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.5",
    "vitest-mock-extended": "^2.0.0"
  },
  "volta": {
    "node": "20.17.0",
    "yarn": "4.4.1"
  }
}
